---
import CallToAction from "../ui/CallToAction.astro";

interface Props {
  title: string;
  description: string;
  class?: string;
}

const { title, description, class: className } = Astro.props as Props;
---

<section class={className}>
  <div class="my-4">
    <h2 class="text-3xl font-semibold pb-4">{title}</h2>
    <p class="text-lg font-light">{description}</p>
  </div>

  <div class="my-4">
    <slot />
  </div>

  <div class="w-full mx-auto text-center">
    <CallToAction
      href="mailto:contactos@lombardidev.ar"
      target="_blank"
      rel="noopener noreferrer"
      class="py-2 px-8 w-auto text-center rounded-full no-underline shadow-md text-slate-50 bg-gradient-to-r from-teal-700 via-green-500 to-teal-900"
    >
      Ver maÃÅs
    </CallToAction>
  </div>
</section>
