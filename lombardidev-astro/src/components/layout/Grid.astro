---
interface Props {
  variant?: 'offset' | 'small';
}

const { variant } = Astro.props as Props;
---

<ul class=`grid auto-rows-fr list-none p-0 md:grid-cols-2 ${
  variant === 'small'
    ? 'gap-6 *:last:odd:col-span-2'
    : 'gap-4 md:pb-28 md:*:odd:translate-y-28 md:*:last:odd:col-start-2 md:*:last:odd:col-end-3 md:*:last:odd:translate-y-0'
}` >
  <slot />
</ul>