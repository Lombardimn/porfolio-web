---
import AstroLogo from "@/components/stack/AstroIcon.astro";

const currentYear = new Date().getFullYear();

const socialLinks: Array<{ label: string; href: string; icon: string }> = [
  {
    label: "GitHub",
    href: "https://github.com/Lombardimn",
    icon: "ph-github-logo",
  },
  {
    label: "LinkedIn",
    href: "https://linkedin.com/in/mnlombardi/",
    icon: "ph-linkedin-logo",
  },
];
---

<footer
  class="h-auto w-full pt-5 text-xl font-light bg-white dark:bg-slate-900 content-center border-t-[0.5px] border-slate-300 dark:border-slate-600/20 md:pb-5"
>
  <section class="max-w-7xl mx-auto flex flex-col justify-center items-center gap-2 md:flex-row md:justify-between">
    <div class="flex flex-col items-center gap-2 pt-2 md:ml-3 md:items-start md:gap-6">
      <p class="flex flex-row items-center">
        Desarrollado con
        <a href="https://astro.build/" target="_blank" no-referrer no-opener>
          <AstroLogo class="w-24 h-auto px-2"/>
        </a>
      </p>
      <p>By <strong class="md:bg-teal-700 md:p-1 md:text-slate-50 md:rounded-2xl md:mx-1">@lombardidev</strong>, since {currentYear}</p>
    </div>

    <div class="flex flex-row items-center justify-end pb-4 text-lg md:justify-center">
      <ul class="flex flex-row gap-5 md:flex-col md:gap-6">
        {
          socialLinks.map((link) => (
            <li class="h-5">
              <a
                href={link.href}
                target="_blank"
                no-referrer
                no-opener
                class="md:flex md:items-center md:gap-2 hover:text-teal-700 dark:hover:text-teal-500 focus:text-teal-700 hover:scale-125 transition-colors ease-in-out duration-300"
              >
                <span>{link.label}</span>
                <i class={`ph-duotone ${link.icon} hidden md:inline`} style="font-size: 24px;" />
              </a>
            </li>
          ))
        }
      </ul>
    </div>

    <div class=" text-center pr-4">
      <a href="https://scrummanager.com/website/c/profile/member.php?id=48869">
        <img
          alt="Product owner"
          src="https://scrummanager.com/intranet/files/credential/8/smalllogo.png"
          class="w-24 h-auto px-2 dark:invert"
        />
      </a>
    </div>
  </section>
</footer>
