---
interface Props {
  colors?: string;
}

const { colors } = Astro.props as Props;
---

<div class={`flex flex-col py-2 px-4 gap-1 rounded-xl items-center justify-center text-sm border-[0.5px] border-solid border-slate-900/10 dark:border-slate-50/10 transition-colors duration-300 ease-in-out ${colors}`} >
  <slot />
</div>